<Window x:Class="CentroMedico.Especialidad.NuevaEspecialidad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CentroMedico.Especialidad"
        mc:Ignorable="d"
        Title="NuevaEspecialidad" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblNombre" Content="Nombre:" HorizontalAlignment="Left" Margin="262,140,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbNombre" HorizontalAlignment="Left" Margin="340,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>

        <Label x:Name="lblDesc" Content="Descripción:" HorizontalAlignment="Left" Margin="262,180,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbDesc" HorizontalAlignment="Left" Margin="341,181,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="260" Height="41"/>
        
        <Button x:Name="btnAnadir" Content="Añadir" HorizontalAlignment="Left" Margin="400,270,0,0" VerticalAlignment="Top" Height="34" Width="49" Click="btnAnadir_Click"/>
    </Grid>
</Window>
